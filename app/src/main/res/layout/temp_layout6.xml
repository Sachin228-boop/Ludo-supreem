<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingamequitlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9000000">

    <ImageView
        android:id="@+id/imageView113"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ingamequitdialog" />

    <ImageView
        android:id="@+id/ingamequitlayoutyesbtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView113"
        app:layout_constraintEnd_toStartOf="@+id/ingamequitlayoutsoundbtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView113"
        app:srcCompat="@drawable/exityesbtn" />

    <ImageView
        android:id="@+id/ingamequitlayoutsoundbtn"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView113"
        app:layout_constraintEnd_toStartOf="@+id/ingamequitlayoutmusicbtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingamequitlayoutyesbtn"
        app:layout_constraintTop_toTopOf="@+id/imageView113"
        app:srcCompat="@drawable/soundon" />

    <ImageView
        android:id="@+id/ingamequitlayoutmusicbtn"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView113"
        app:layout_constraintEnd_toStartOf="@+id/ingamequitlayoutnobtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingamequitlayoutsoundbtn"
        app:layout_constraintTop_toTopOf="@+id/imageView113"
        app:srcCompat="@drawable/musicoff" />

    <ImageView
        android:id="@+id/ingamequitlayoutnobtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView113"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingamequitlayoutmusicbtn"
        app:layout_constraintTop_toTopOf="@+id/imageView113"
        app:srcCompat="@drawable/exitnobtn" />
</androidx.constraintlayout.widget.ConstraintLayout>